{
  "ts-node": {
    "compilerOptions": {
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
  },
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "outDir": "tmp/dist",
    "esModuleInterop": true,
    "lib": [
      "ES2015",
      "ES6",
      "ES5",
      "ES2022"
    ],
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ],
  "include": ["script"]
}